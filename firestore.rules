rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // =========================================================================
    // HELPER FUNCTIONS
    // =========================================================================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Check if user is admin (based on Firestore users collection)
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Check if user is the quiz creator
    function isQuizCreator(quizId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/quizzes/$(quizId)) &&
        get(/databases/$(database)/documents/quizzes/$(quizId)).data.createdBy == request.auth.uid;
    }
    
    // =========================================================================
    // USERS COLLECTION
    // Any authenticated user can read user profiles
    // Users can only create/update their own profile
    // =========================================================================
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if false; // Users cannot delete profiles
    }
    
    // =========================================================================
    // QUIZZES COLLECTION
    // Any authenticated user can read quizzes (to join them)
    // Only admins can create, update, delete quizzes
    // =========================================================================
    match /quizzes/{quizId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isQuizCreator(quizId);
      allow delete: if isQuizCreator(quizId);
      
      // ---------------------------------------------------------------------
      // QUESTIONS SUBCOLLECTION
      // Anyone can read questions (participants need to see them)
      // Only quiz creator can write
      // ---------------------------------------------------------------------
      match /questions/{questionId} {
        allow read: if isAuthenticated();
        allow write: if isQuizCreator(quizId);
      }
      
      // ---------------------------------------------------------------------
      // PARTICIPANTS SUBCOLLECTION
      // Anyone can read (for leaderboard)
      // Users can only join as themselves (create their own participant doc)
      // Users can only update their own score
      // ---------------------------------------------------------------------
      match /participants/{participantId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && isOwner(participantId);
        allow update: if isAuthenticated() && isOwner(participantId);
        allow delete: if false; // Participants cannot leave once joined
      }
      
      // ---------------------------------------------------------------------
      // RESPONSES SUBCOLLECTION
      // Admins can read all responses
      // Participants can only read their own responses
      // Users can only create responses for themselves
      // Once submitted, responses cannot be modified
      // ---------------------------------------------------------------------
      match /responses/{responseId} {
        allow read: if isAuthenticated() && (
          isQuizCreator(quizId) || 
          resource.data.oduserId == request.auth.uid
        );
        allow create: if isAuthenticated() && 
          request.resource.data.oduserId == request.auth.uid;
        allow update, delete: if false; // Responses are immutable
      }
    }
  }
}
